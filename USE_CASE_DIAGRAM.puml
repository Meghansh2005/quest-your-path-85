@startuml CareerQuest_UseCaseDiagram
!theme plain
skinparam componentStyle rectangle
skinparam monochrome false
skinparam useCase {
    BackgroundColor LightYellow
    BorderColor Black
}
skinparam actor {
    BackgroundColor LightBlue
    BorderColor DarkBlue
}

left to right direction

' Actors
actor "Guest User" as Guest
actor "Authenticated\nUser" as User
actor "AI System\n(Gemini API)" as AI #LightGreen

rectangle "CareerQuest System" #LightGray {
  
  ' Authentication Package
  package "Authentication" #LightYellow {
    usecase "UC1: Sign Up" as UC1
    usecase "UC2: Login" as UC2
    usecase "UC3: Logout" as UC3
  }

  ' Assessment Selection Package
  package "Path Selection" #LightCyan {
    usecase "UC4: View Landing\nPage" as UC4
    usecase "UC5: Select Talents\nPath" as UC5
    usecase "UC6: Select Scenarios\nPath" as UC6
  }

  ' Talents Path Package
  package "Talents Path\nAssessment" #LightGreen {
    usecase "UC7: Select 5 Skills" as UC7
    usecase "UC8: Take Phase 1 Quiz\n(20 Questions)" as UC8
    usecase "UC9: View Phase 1\nAnalysis" as UC9
    usecase "UC10: Take Phase 2 Quiz\n(30 Questions)" as UC10
    usecase "UC11: View Career\nAnalysis" as UC11
  }

  ' Scenarios Path Package
  package "Scenarios Path\nAssessment" #LightPink {
    usecase "UC12: Select Field of\nInterest" as UC12
    usecase "UC13: Select Niche\nField" as UC13
    usecase "UC14: Complete Scenario\nQuiz" as UC14
    usecase "UC15: View Personality\nAnalysis" as UC15
  }

  ' Results Package
  package "Results & Reports" #LightSalmon {
    usecase "UC16: View Full\nResults" as UC16
    usecase "UC17: View Summary\nResults" as UC17
    usecase "UC18: Export Results\nas PDF" as UC18
    usecase "UC19: Print Results" as UC19
    usecase "UC20: Share Results" as UC20
    usecase "UC21: Retake\nAssessment" as UC21
  }

  ' AI Services Package
  package "AI-Powered Services" #LightSteelBlue {
    usecase "UC22: Generate\nAdaptive Questions" as UC22
    usecase "UC23: Analyze Career\nFit" as UC23
    usecase "UC24: Generate\nWorkplace Scenarios" as UC24
    usecase "UC25: Analyze\nPersonality Profile" as UC25
    usecase "UC26: Generate\nLearning Path" as UC26
    usecase "UC27: Provide Market\nInsights" as UC27
  }
}

' Guest User Relationships
Guest --> UC1
Guest --> UC2
Guest --> UC4

' Authenticated User Relationships
User --> UC3
User --> UC5
User --> UC6
User --> UC7
User --> UC8
User --> UC9
User --> UC10
User --> UC11
User --> UC12
User --> UC13
User --> UC14
User --> UC15
User --> UC16
User --> UC17
User --> UC18
User --> UC19
User --> UC20
User --> UC21

' Authentication Flow
UC1 ..> UC4 : <<include>>
UC2 ..> UC4 : <<include>>

' Path Selection Flow
UC4 ..> UC5 : <<include>>
UC4 ..> UC6 : <<include>>

' Talents Path Flow
UC5 --> UC7
UC7 --> UC8
UC8 ..> UC22 : <<uses>>
UC8 --> UC9
UC9 --> UC10
UC10 ..> UC22 : <<uses>>
UC10 --> UC11
UC11 ..> UC23 : <<uses>>
UC11 ..> UC26 : <<uses>>
UC11 ..> UC27 : <<uses>>

' Scenarios Path Flow
UC6 --> UC12
UC12 --> UC13
UC13 --> UC14
UC14 ..> UC24 : <<uses>>
UC14 --> UC15
UC15 ..> UC25 : <<uses>>

' Results Flow
UC11 --> UC16
UC15 --> UC16
UC16 <.. UC17 : <<extend>>
UC16 <.. UC18 : <<extend>>
UC16 <.. UC19 : <<extend>>
UC16 <.. UC20 : <<extend>>
UC16 <.. UC21 : <<extend>>

' AI System Relationships
AI --> UC22
AI --> UC23
AI --> UC24
AI --> UC25
AI --> UC26
AI --> UC27

note right of UC22
  AI generates personalized
  questions based on:
  - Selected skills
  - Previous responses
  - Assessment phase
end note

note right of UC23
  AI analyzes responses to:
  - Identify career matches
  - Calculate match scores
  - Recommend career paths
  - Identify skill gaps
end note

note right of UC18
  Generates comprehensive
  PDF report including:
  - Career recommendations
  - Skill analysis
  - Learning paths
  - Market insights
end note

note bottom of UC16
  Results include:
  - Overview tab
  - Career Paths tab
  - Skills Analysis tab
  - Personality tab
  - Learning Path tab
  - AI Insights tab
end note

@enduml

